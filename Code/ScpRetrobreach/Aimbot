local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

-- // Settings
_G.AimAssistEnabled = false
_G.AimStrength = 50 
_G.AimFOV = 150
_G.TargetPart = "Head"

-- // FOV Circle
local FOVCircle = Drawing.new("Circle")
FOVCircle.Visible = false
FOVCircle.Color = Color3.fromRGB(255, 255, 255)
FOVCircle.Thickness = 1
FOVCircle.Radius = _G.AimFOV

local function GetClosestEnemy()
    local closestEnemy = nil
    local shortestDistance = _G.AimFOV
    local center = Vector2.new(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Team ~= LocalPlayer.Team and player.Character then
            local part = player.Character:FindFirstChild(_G.TargetPart)
            if part then
                local pos, onScreen = Camera:WorldToViewportPoint(part.Position)
                if onScreen then
                    local dist = (Vector2.new(pos.X, pos.Y) - center).Magnitude
                    if dist < shortestDistance then
                        closestEnemy = part
                        shortestDistance = dist
                    end
                end
            end
        end
    end
    return closestEnemy
end

RunService.RenderStepped:Connect(function()
    -- Circle Sync
    FOVCircle.Visible = _G.AimAssistEnabled
    FOVCircle.Radius = _G.AimFOV
    FOVCircle.Position = Vector2.new(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)

    -- If the master toggle is off, stop everything
    if not _G.AimAssistEnabled then return end

    -- THE FIX: Explicitly check the real-time state of the Right Mouse Button
    local holdingRightClick = UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2)

    if holdingRightClick then
        local target = GetClosestEnemy()
        if target then
            local lookAt = CFrame.new(Camera.CFrame.Position, target.Position)
            -- We use a smaller multiplier (1000) for more control
            local lerpSpeed = math.clamp(_G.AimStrength / 1000, 0, 1)
            
            Camera.CFrame = Camera.CFrame:Lerp(lookAt, lerpSpeed)
        end
    end
    -- If 'holdingRightClick' is false, the code simply does nothing this frame.
end)
